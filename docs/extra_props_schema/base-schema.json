{
  "definitions": {},
  "type": "array",
  "title": "extra_properties structure",
  "description": "extra_properties structure detailed up to answer level.",
  "items": {
    "type": "object",
    "title": "A question-answer response",
    "required": [
      "id",
      "category_url",
      "label",
      "answer"
    ],
    "properties": {
      "id": {
        "type": "string",
        "title": "Fixed identifier for question",
        "examples": [
          "extra_klok_wat"
        ]
      },
      "label": {
        "type": "string",
        "title": "The question label",
        "examples": [
          "Wat is het probleem?"
        ]
      },
      "answer": {
        "title": "The answer data"
      },
      "answer_schema": {
        "type": "string",
        "title": "The answer schema URI",
        "examples": [
          "/schemas/some_type.json"
        ]
      },
      "category_url": {
        "type": "string",
        "title": "Extra property namespace",
        "examples": [
          "/signals/v1/public/terms/categories/wegen-verkeer-straatmeubilair/sub_categories/lantaarnpaal-straatverlichting"
        ]
      }
    }
  }
}
